  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "/home/mauro/snippets/meshit_plc/MeshIt",
      "args": [],
      "stopAtEntry": false,
      "cwd": ".",
      "environment": [
        {
          "name": "LD_LIBRARY_PATH",
          "value": "$LD_LIBRARY_PATH:/home/mauro/projects/moose_libmesh/libmesh/installed/lib"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
